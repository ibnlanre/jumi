{
  "name": "jumi",
  "version": "2.0.0",
  "description": "A comprehensive CSS animation library built as a TailwindCSS plugin",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "lint": "eslint --fix .",
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "test": "npm run build && npm run test:integration",
    "test:integration": "tailwindcss -i examples/input.css -o examples/output.css --config examples/tailwind.config.js",
    "prepublishOnly": "npm run build",
    "check-types": "tsc --noEmit"
  },
  "keywords": [
    "tailwindcss",
    "animation",
    "css",
    "plugin",
    "transforms",
    "effects",
    "composable",
    "typescript"
  ],
  "author": "Ridwan Olanrewaju",
  "license": "MIT",
  "peerDependencies": {
    "tailwindcss": ">=3.0.0"
  },
  "devDependencies": {
    "@stylistic/eslint-plugin": "^5.3.1",
    "@types/node": "^24.0.3",
    "@typescript-eslint/parser": "^8.34.1",
    "@vitest/coverage-v8": "3.2.4",
    "@vitest/eslint-plugin": "^1.2.7",
    "csstype": "^3.1.3",
    "eslint": "^9.35.0",
    "eslint-import-resolver-typescript": "^4.4.3",
    "eslint-plugin-import-x": "^4.15.2",
    "eslint-plugin-only-warn": "^1.1.0",
    "eslint-plugin-paths": "^1.1.0",
    "eslint-plugin-perfectionist": "^4.14.0",
    "eslint-plugin-prettier": "^5.5.0",
    "eslint-plugin-storybook": "^9.0.11",
    "globals": "^16.2.0",
    "happy-dom": "^18.0.1",
    "jiti": "^2.5.1",
    "tailwindcss": "^3.4.0",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0",
    "typescript-eslint": "^8.34.1",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ibnlanre/jumi"
  }
}
