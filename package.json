{
  "name": "jumi",
  "version": "2.0.0",
  "description": "A comprehensive CSS animation library built as a TailwindCSS plugin",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "lint": "eslint --fix .",
    "bundle": "tsup src/index.ts --format cjs,esm --dts",
    "watch-bundle": "tsup src/index.ts --format cjs,esm --dts --watch",
    "build": "npm run bundle && npm run tailwind",
    "tailwind": "tailwindcss -i ./examples/input.css -o ./examples/output.css --config ./examples/tailwind.config.js",
    "prepublishOnly": "npm run build",
    "check-types": "tsc --noEmit",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "analyze": "node scripts/analyze.js"
  },
  "keywords": [
    "tailwindcss",
    "animation",
    "css",
    "plugin",
    "transforms",
    "effects",
    "composable",
    "typescript"
  ],
  "author": "Ridwan Olanrewaju",
  "license": "MIT",
  "peerDependencies": {
    "tailwindcss": ">=3.0.0 || insiders"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^4.1.1",
    "@storybook/addon-a11y": "^9.1.10",
    "@storybook/addon-docs": "^9.1.10",
    "@storybook/addon-onboarding": "^9.1.10",
    "@storybook/addon-themes": "^9.1.10",
    "@storybook/addon-vitest": "^9.1.10",
    "@storybook/react": "^9.1.10",
    "@storybook/react-vite": "^9.1.10",
    "@stylistic/eslint-plugin": "^5.4.0",
    "@tailwindcss/cli": "^4.1.14",
    "@tailwindcss/vite": "^4.1.14",
    "@types/node": "^24.6.2",
    "@types/react": "^19.2.0",
    "@types/react-dom": "^19.2.0",
    "@typescript-eslint/parser": "^8.45.0",
    "@vitest/coverage-v8": "3.2.4",
    "@vitest/eslint-plugin": "^1.3.15",
    "csstype": "^3.1.3",
    "eslint": "^9.36.0",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import-x": "^4.16.1",
    "eslint-plugin-only-warn": "^1.1.0",
    "eslint-plugin-paths": "^1.1.0",
    "eslint-plugin-perfectionist": "^4.15.0",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-storybook": "^9.1.10",
    "globals": "^16.4.0",
    "happy-dom": "^19.0.2",
    "jiti": "^2.6.1",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "storybook": "^9.1.10",
    "tailwindcss": "^4.1.14",
    "tsup": "^8.5.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.45.0",
    "vite": "^7.1.8",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ibnlanre/jumi"
  },
  "dependencies": {
    "glob": "^11.0.3"
  }
}
